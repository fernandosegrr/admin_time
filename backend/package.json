{
  "name": "gestion-tiempo-backend",
  "version": "1.0.0",
  "description": "Backend API for academic time management app",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npx esbuild src/server.ts --bundle --platform=node --outdir=dist --format=cjs --external:@prisma/client --external:bcryptjs",
